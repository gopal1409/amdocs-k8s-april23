220  kubectl run webpod --image=nginx --dry-run=client -o yaml
  221  kubectl run webpod --image=nginx --dry-run=client -o yaml > drypod.yaml
  222  ls
  223  kubectl apply -f drypod.yaml
  224  kubectl get pod
